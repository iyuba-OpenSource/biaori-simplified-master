<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/shape_bg_lesson"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/textbook_iv_lesson"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textbook_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="第一课"
            android:textColor="@android:color/black" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textbook_tv_lesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="李さんは中国人です。"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textbook_tv_lessonch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="小李是中国人。"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/textbook_ll_listen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.iyuba.widget.rpb.RoundProgressBar
                    android:id="@+id/textbook_rpb_listen"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@mipmap/icon_listen"
                    app:rpbCircleColor="@android:color/darker_gray"
                    app:rpbCircleProgressColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textbook_tv_listen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0%"
                    android:textSize="7sp" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.iyuba.widget.rpb.RoundProgressBar
                    android:id="@+id/textbook_rpb_word"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@mipmap/icon_word"
                    app:rpbCircleColor="@android:color/darker_gray"
                    app:rpbCircleProgressColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textbook_tv_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-/-"
                    android:textSize="7sp" />
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <com.iyuba.widget.rpb.RoundProgressBar
                    android:id="@+id/textbook_rpb_eval"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@mipmap/icon_eval"
                    app:rpbCircleColor="@android:color/darker_gray"
                    app:rpbCircleProgressColor="?colorPrimary" />

                <TextView
                    android:id="@+id/textbook_tv_eval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="-/-"
                    android:textSize="7sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>